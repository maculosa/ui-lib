    "release:hooks": "pnpm build:hooks && pnpm release:only",
    "release:all": "pnpm build:all && pnpm release:only",
    "release:only": "changeset publish --registry=https://registry.npmjs.com/",
    "play": "pnpm run --filter ./playground dev"
