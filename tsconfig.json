{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "es2016",
        "paths": {
            "@/*": ["src/*"],
            "datav/*": ["packages/datav/*"],
            "vite-lib/*": ["packages/vite-lib/*"]
        }
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "packages/**/*.d.ts",
        "packages/**/*.vue"
    ]
}
